# Paradise Dental - Production Environment Variables
# Copy this file to .env and fill in your production values

NODE_ENV=production
PORT=3000

# Database Configuration (Hostinger MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_secure_password

# JWT Configuration (Use strong, unique secrets in production!)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-very-long-and-secure-jwt-secret-change-this-in-production-minimum-64-chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Email Configuration (SMTP)
# For Gmail, use App Passwords: https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your-production-email@gmail.com
SMTP_PASS=your-gmail-app-password
EMAIL_FROM="Paradise Dental <noreply@paradisedental.com>"
ADMIN_EMAIL=admin@paradisedental.com

# SMS Configuration (Twilio)
# Sign up at https://www.twilio.com/
TWILIO_ACCOUNT_SID=your-production-twilio-sid
TWILIO_AUTH_TOKEN=your-production-twilio-token
TWILIO_PHONE_NUMBER=+66XXXXXXXXX

# URLs (Update with your production domain)
ADMIN_URL=https://your-domain.com
FRONTEND_URL=https://your-domain.com

# Logging
LOG_LEVEL=warn

# CORS (comma-separated list of allowed origins if needed)
# CORS_ORIGINS=https://your-domain.com
